{
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Transform demo JSON",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/dist/cli",
			"args": ["--in", "src/demo/fluentui.json", "--out", "build"],
			"preLaunchTask": "inc",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}